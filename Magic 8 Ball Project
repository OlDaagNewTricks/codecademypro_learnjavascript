//*Control Flow using if/else statements
if (randomNumber === 0) {
  console.log('Yes');
} else if (randomNumber ===1) {
  console.log('Definitely');
} else if (randomNumber ===2) {
  console.log('Nope!');
} else if (randomNumber ===3) {
  console.log('You wish!');
} else if (randomNumber ===4) {
  console.log('My vision is cloudy on this one.');
} else if (randomNumber ===5) {
  console.log('Concentrate harder.  My vision is blurry on this one.');
} else if (randomNumber ===6) {
  console.log('Bet the house on it!');
} else if (randomNumber ===7) {
  console.log('I would not count on it!');
}

//*Magic 8 Balls Answers - Run multiple times to check for random answers.

console.log(eightBall);
